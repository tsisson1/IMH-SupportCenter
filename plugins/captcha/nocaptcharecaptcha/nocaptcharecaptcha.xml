		<field
			name="secret_key"
			type="text"
			default=""
			label="PLG_NOCAPTCHARECAPTCHA_PRIVATE_KEY_LABEL"
			description="PLG_NOCAPTCHARECAPTCHA_PRIVATE_KEY_DESC"
			required="true"
			filter="string"
