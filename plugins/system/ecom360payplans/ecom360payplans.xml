    <version>2.0.0</version>
    <description>PLG_SYSTEM_ECOM360_PAYPLANS_DESCRIPTION</description>
    <files>
        <file plugin="ecom360payplans">ecom360payplans.php</file>
    </files>
    <languages folder="administrator/language">
        <language tag="en-GB">en-GB/en-GB.plg_system_ecom360payplans.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
