                <field type="input" name="store_id"
                       label="PLG_SYSTEM_ECOM360_PAYPLANS_STORE_ID" description="PLG_SYSTEM_ECOM360_PAYPLANS_STORE_ID_DESC"
                       default="42" required="true" />
            </fieldset>
        </fields>
